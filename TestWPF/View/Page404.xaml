<Page x:Class="TestWPF.View.Page404"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page404">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="115"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Foreground="Gray" IsEnabled="False">Назад</Button>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold">Меню</TextBlock>
            <Button x:Name="LogOutButton" Grid.Column="2">Выйти из аккаунта</Button>
            <Border Grid.ColumnSpan="3"  BorderBrush="Black" BorderThickness="1"/>
        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Text="Страница не найдена."/>
        </Grid>
    </Grid>
</Page>
